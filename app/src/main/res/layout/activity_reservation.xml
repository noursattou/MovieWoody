<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"

    tools:context="com.example.tcc.moviewoody.Reservation">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewReservation"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reservation " />

        <TextView
            android:id="@+id/textViewCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose City" />


    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="200dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:text="Choose Cinema"
            android:id="@+id/textViewCinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinnerCinema"
        android:layout_width="200dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:text="Choose Movie"
            android:id="@+id/textViewMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerMovie"
            android:layout_width="200dp"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:text="Choose Movie time"
            android:id="@+id/textViewMovieTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerMovieTime"
            android:layout_width="200dp"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="4dp" />




        <TextView
            android:text="Choose number of seats"
            android:id="@+id/textViewSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerSeats"
            android:layout_width="75dp"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="4dp" />

        <Button
            android:layout_margin="15dp"
            android:id="@+id/buttonReserve"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Cancel" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
