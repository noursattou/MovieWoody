<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context="com.example.tcc.moviewoody.AddCinema"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewCinemaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_margin="15dp"

            android:text="enter the cinema name"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="148dp" />

        <EditText
            android:id="@+id/editTextCinemaName"
            android:layout_width="match_parent"
            android:layout_margin="15dp"

            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="203dp" />


        <TextView
            android:id="@+id/textViewCinemaCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:layout_marginTop="15dp"
            android:text="enter the city where cinema is located"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="287dp" />

        <EditText
            android:id="@+id/editTextCinemaCity"
            android:layout_margin="15dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewCinemaLocation"
            android:layout_margin="15dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="enter the location of the cinema"
            />

        <EditText
            android:id="@+id/editTextCinemaLocation"
            android:layout_margin="15dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <Button
            android:id="@+id/buttonAddCinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:text="add"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="238dp" />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>