<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context="com.example.tcc.moviewoody.AddMovie"
    >

    <TextView
        android:id="@+id/textViewMovieName"
        android:layout_width="168dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewGenre"
        android:layout_marginTop="50dp"
        android:text="enter Movie genre"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="64dp" />
    <EditText
        android:id="@+id/editTextMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="4dp" />


    <TextView
        android:id="@+id/textViewGenre"
        android:layout_width="168dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/editTextMovieName"
        android:layout_alignLeft="@+id/textViewMovieName"
        android:layout_alignStart="@+id/textViewMovieName"
        android:text="enter name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="68dp" />

    <EditText
        android:id="@+id/editTextGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewMovieName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="68dp" />

    <TextView
        android:id="@+id/textViewDuration"
        android:layout_width="166dp"
        android:layout_height="39dp"

        android:layout_alignEnd="@+id/textViewGenre"
        android:layout_alignRight="@+id/textViewGenre"
        android:layout_below="@+id/textViewMovieName"
        android:layout_marginTop="29dp"
        android:text="entre Duration " />

    <EditText
        android:id="@+id/editTextDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewDuration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="00:00:00" />

    <Button
        android:id="@+id/buttonAddMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewDuration"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewDuration"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="add" />


</RelativeLayout>